@model IEnumerable<MicroservicesVisualizer.Models.Supplier.SupplierDto>
@{
    ViewData["Title"] = "Suppliers";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Suppliers</h1>
        <div>
            <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#searchModal">
                <i class="bi bi-search"></i> Search
            </button>
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add Supplier
            </a>
            <a asp-action="PurchaseOrders" class="btn btn-outline-info">
                <i class="bi bi-truck"></i> Purchase Orders
            </a>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info" role="alert">
            No suppliers found.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Contact</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var supplier in Model)
                    {
                        <tr class="@(!supplier.IsActive ? "supplier-inactive" : "")">
                            <td>@supplier.Id</td>
                            <td>@supplier.Name</td>
                            <td>@supplier.ContactName</td>
                            <td>@supplier.Email</td>
                            <td>@supplier.Phone</td>
                            <td>
                                <span class="badge rounded-pill bg-@(supplier.IsActive ? "success" : "secondary")">
                                    @(supplier.IsActive ? "Active" : "Inactive")
                                </span>
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="Details" asp-route-id="@supplier.Id" class="btn btn-outline-primary">
                                        <i class="bi bi-info-circle"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@supplier.Id" class="btn btn-outline-warning">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    @if (supplier.IsActive)
                                    {
                                        <button type="button" class="btn btn-outline-danger"
                                                onclick="document.getElementById('deactivate-@supplier.Id').submit()">
                                            <i class="bi bi-x-circle"></i>
                                        </button>
                                        <form id="deactivate-@supplier.Id" asp-action="Deactivate" asp-route-id="@supplier.Id" method="post" class="d-none">
                                            @Html.AntiForgeryToken()
                                        </form>
                                    }
                                    else
                                    {
                                        <button type="button" class="btn btn-outline-success"
                                                onclick="document.getElementById('activate-@supplier.Id').submit()">
                                            <i class="bi bi-check-circle"></i>
                                        </button>
                                        <form id="activate-@supplier.Id" asp-action="Activate" asp-route-id="@supplier.Id" method="post" class="d-none">
                                            @Html.AntiForgeryToken()
                                        </form>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<!-- Search Modal -->
<div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="searchModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="searchModalLabel">Search Suppliers</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="Search" method="get">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" name="name" value="@ViewBag.Name">
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" value="@ViewBag.Email">
                    </div>
                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="isActive" name="isActive" value="true" @(ViewBag.IsActive == true ? "checked" : "")>
                        <label class="form-check-label" for="isActive">Active Only</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/supplier-notifications.js"></script>
}