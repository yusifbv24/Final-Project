@model IEnumerable<MicroservicesVisualizer.Models.Product.ProductDto>
@{
    ViewData["Title"] = "Products";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Products</h1>
        <div>
            <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#searchModal">
                <i class="bi bi-search"></i> Search
            </button>
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add Product
            </a>
            <a asp-action="Categories" class="btn btn-outline-info">
                <i class="bi bi-tags"></i> Categories
            </a>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info" role="alert">
            No products found.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>SKU</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.Id</td>
                            <td>@product.Name</td>
                            <td>@product.SKU</td>
                            <td>@product.CategoryName</td>
                            <td>$@product.Price.ToString("N2")</td>
                            <td>
                                <span class="badge rounded-pill bg-@(product.IsActive ? "success" : "secondary")">
                                    @(product.IsActive ? "Active" : "Inactive")
                                </span>
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-outline-primary">
                                        <i class="bi bi-info-circle"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-outline-warning">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-outline-danger">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<!-- Search Modal -->
<div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="searchModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="searchModalLabel">Search Products</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="Search" method="get">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="keyword" class="form-label">Keyword</label>
                        <input type="text" class="form-control" id="keyword" name="keyword" value="@ViewBag.Keyword">
                    </div>
                    <div class="mb-3">
                        <label for="minPrice" class="form-label">Minimum Price</label>
                        <input type="number" class="form-control" id="minPrice" name="minPrice" min="0" step="0.01" value="@ViewBag.MinPrice">
                    </div>
                    <div class="mb-3">
                        <label for="maxPrice" class="form-label">Maximum Price</label>
                        <input type="number" class="form-control" id="maxPrice" name="maxPrice" min="0" step="0.01" value="@ViewBag.MaxPrice">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/product-notifications.js"></script>
}