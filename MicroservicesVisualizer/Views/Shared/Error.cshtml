@{
    ViewData["Title"] = "Error";
}

<h1 class="text-danger">Error.</h1>
<h2 class="text-danger">An error occurred while processing your request.</h2>

@if (Model.ShowRequestId)
{
    <p>
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
    </p>
}

<div class="alert alert-danger mt-4">
    <p>
        The microservices visualization dashboard encountered an error. This might be due to one of the following reasons:
    </p>
    <ul>
        <li>One or more microservices are unavailable</li>
        <li>Network connectivity issues</li>
        <li>Internal server error</li>
    </ul>
    <p>
        Please check the status of all microservices and try again.
    </p>
</div>

<div class="mt-4">
    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-primary">
        <i class="bi bi-arrow-left"></i> Return to Dashboard
    </a>
</div>