@model IEnumerable<MicroservicesVisualizer.Models.Order.OrderDto>
@{
    ViewData["Title"] = "Orders";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            @(ViewBag.CurrentStatus != null ? $"{ViewBag.CurrentStatus} Orders" : "All Orders")
        </h1>
        <div>
            <div class="dropdown d-inline-block me-2">
                <button class="btn btn-outline-primary dropdown-toggle" type="button" id="filterDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="bi bi-funnel"></i> Filter
                </button>
                <ul class="dropdown-menu" aria-labelledby="filterDropdown">
                    <li><a class="dropdown-item" asp-action="Index">All Orders</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" asp-action="ByStatus" asp-route-status="Pending">Pending Orders</a></li>
                    <li><a class="dropdown-item" asp-action="ByStatus" asp-route-status="Processing">Processing Orders</a></li>
                    <li><a class="dropdown-item" asp-action="ByStatus" asp-route-status="Shipped">Shipped Orders</a></li>
                    <li><a class="dropdown-item" asp-action="ByStatus" asp-route-status="Delivered">Delivered Orders</a></li>
                    <li><a class="dropdown-item" asp-action="ByStatus" asp-route-status="Cancelled">Cancelled Orders</a></li>
                </ul>
            </div>
            <a asp-action="Statistics" class="btn btn-outline-info">
                <i class="bi bi-graph-up"></i> Statistics
            </a>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info" role="alert">
            No orders found.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Order #</th>
                        <th>Customer</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th>Items</th>
                        <th>Total</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr class="order-status-@order.Status.ToString().ToLower()">
                            <td>@order.Id</td>
                            <td>@order.CustomerName</td>
                            <td>@order.OrderDate.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>
                                <span class="badge rounded-pill bg-@(order.Status == MicroservicesVisualizer.Models.Order.OrderStatus.Pending ? "warning" :
                                           order.Status == MicroservicesVisualizer.Models.Order.OrderStatus.Processing ? "info" :
                                           order.Status == MicroservicesVisualizer.Models.Order.OrderStatus.Shipped ? "primary" :
                                           order.Status == MicroservicesVisualizer.Models.Order.OrderStatus.Delivered ? "success" : "danger")">
                                    @order.Status
                                </span>
                            </td>
                            <td>@order.Items.Count()</td>
                            <td>$@order.TotalAmount.ToString("N2")</td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-outline-primary">
                                        <i class="bi bi-info-circle"></i>
                                    </a>
                                    <a asp-action="UpdateStatus" asp-route-id="@order.Id" class="btn btn-outline-info">
                                        <i class="bi bi-arrow-up-circle"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@section Scripts {
    <script src="~/js/order-notifications.js"></script>
}