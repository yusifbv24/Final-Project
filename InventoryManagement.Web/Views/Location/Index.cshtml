@model IEnumerable<InventoryManagement.Web.Models.Inventory.LocationViewModel>

@{
    ViewData["Title"] = "Locations";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <h1>Locations</h1>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Create New Location
        </a>
    </div>

    <div class="card mt-4">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-info">
                    No locations found. Click the "Create New Location" button to add a location.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Code</th>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var location in Model)
                            {
                                <tr>
                                    <td>@location.Id</td>
                                    <td>@location.Code</td>
                                    <td>@location.Name</td>
                                    <td>@location.Description</td>
                                    <td>
                                        @if (location.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Inactive</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@location.Id" class="btn btn-sm btn-primary">
                                                <i class="bi bi-info-circle"></i> Details
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@location.Id" class="btn btn-sm btn-warning">
                                                <i class="bi bi-pencil"></i> Edit
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@location.Id" class="btn btn-sm btn-danger">
                                                <i class="bi bi-trash"></i> Delete
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>